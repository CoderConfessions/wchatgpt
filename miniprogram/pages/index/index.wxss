/**index.wxss**/
.chat-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  background-color: #f5f5f5;
}
.placeholder-top {
  width: 100%;
  height: 10rpx;
  background-color: #f5f5f5;
}
.chat-input {
  display: flex;
  height: fit-content;
  flex-direction: row;
  background-color: #f7f7f7;
  padding: 25rpx 16rpx;
  align-items: flex-end;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
}
.placeholder-view {
  width: 100%;
  height: 120rpx;
}
.chat-window{
  margin-bottom: 16rpx;
}

.chat-input-box {
  padding: 18rpx 0rpx;
  border-radius: 30rpx;
  margin-right: -12rpx;
  background-color: white;
  word-break: break-all;
  padding-left: 18rpx;
  padding-right: 18rpx;
  border: none;
}
.chat-send-btn {
  color: #ffffff;
  background-color: #12ac12;
  white-space: nowrap;
  padding: 20rpx 0rpx;
  font-weight: 600;
}

.gpt-message {
  display: flex;
  width: fit-content;
  padding: 5rpx;
  flex-direction: row;
  padding-right: 113rpx;
  padding-left: 15rpx;
}
.triangle-left {
  position: relative;
  border-top: 15rpx solid white;
  border-left: 15rpx solid transparent;
  margin-top: 40rpx;
  margin-left: 10rpx;
}
.triangle-left2 {
  top: -12rpx;
  left: -4rpx;
  position: absolute;
  border-top: 15rpx solid white;
  border-left: 15rpx solid transparent;
}
.chat-text-left {
  text-align: justify;
  width: 88%;
  padding: 16rpx;
  border-radius: 14rpx;
  border: 6rpx solid white;
  line-height: 46rpx;
  background-color: white;
}

.my-chat-message {
  display: flex;
  padding: 5rpx;
  padding-left: 175rpx;
  padding-right: 15rpx;
  flex-direction: row-reverse;
}
.triangle-right {
  position: relative;
  border-top: 15rpx solid #95ec69;
  border-right: 15rpx solid transparent;
  margin-top: 40rpx;
  margin-right: 10rpx;
}
.triangle-right2 {
  top: -12rpx;
  right: -4rpx;
  position: absolute;
  border-top: 15rpx solid #95ec69;
  border-right: 15rpx solid transparent;
}

.chat-text-right {
  text-align: justify;
  padding: 16rpx;
  border-radius: 14rpx;
  line-height: 46rpx;
  max-width: 88%;
  background-color: #95ec69;
}